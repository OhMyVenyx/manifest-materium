<?xml version="1.0" encoding="UTF-8"?>
<manifest>

  <!-- Remotes -->
  <remote  name="kasumi"
           fetch="https://github.com/ProjectKasumi"
           revision="kasumi-v2" />

  <remote  name="devices"
           fetch="https://github.com/Kasumi-Devices"
           revision="kasumi-v2" />

  <remote  name="gitlab-gapps"
           fetch="https://gitlab.com/MindTheGApps"
           revision="tau" />

  <!-- Remove repos to replace -->
  <remove-project name="LineageOS/android" />
  <remove-project name="LineageOS/android_build" />
  <remove-project name="LineageOS/android_build_soong" />
  <remove-project name="LineageOS/android_frameworks_base" />
  <remove-project name="LineageOS/android_lineage-sdk" />
  <remove-project name="LineageOS/android_packages_apps_Backgrounds" />
  <remove-project name="LineageOS/android_packages_apps_Settings" />
  <remove-project name="LineageOS/android_packages_apps_Trebuchet" />
  <remove-project name="LineageOS/android_vendor_lineage" />

  <!-- Our replacements -->
  <project path="android" name="manifest" remote="kasumi" />
  <project path="build/make" name="build_make" remote="kasumi" groups="pdk" >
    <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
    <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
    <linkfile src="core" dest="build/core" />
    <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
    <linkfile src="target" dest="build/target" />
    <linkfile src="tools" dest="build/tools" />
  </project>
  <project path="build/soong" name="build_soong" remote="kasumi" groups="pdk,tradefed" >
    <linkfile src="root.bp" dest="Android.bp" />
    <linkfile src="bootstrap.bash" dest="bootstrap.bash" />
  </project>
  <project path="frameworks/base" name="frameworks_base" remote="kasumi" groups="pdk-cw-fs,pdk-fs" />
  <project path="lineage-sdk" name="lineage-sdk" remote="kasumi" />
  <project path="packages/apps/Backgrounds" name="packages_apps_Backgrounds" remote="kasumi" />
  <project path="packages/apps/Settings" name="packages_apps_Settings" remote="kasumi" />
  <project path="packages/apps/Trebuchet" name="packages_apps_Trebuchet" remote="kasumi" />
  <project path="vendor/kasumi" name="vendor_kasumi" remote="kasumi" />

  <!-- Our own repos -->
  <project path="buildflags" name="build_flags" remote="kasumi" >
    <linkfile src="README.md" dest="flags.md" />
  </project>
  <project path="vendor/gcgop" name="vendor_gcgop" remote="kasumi" />
  <project path="vendor/prebuilts" name="vendor_prebuilts" remote="kasumi" />

  <!-- Other repos -->
  <project path="vendor/gapps" name="vendor_gapps" remote="gitlab-gapps" />
</manifest>
